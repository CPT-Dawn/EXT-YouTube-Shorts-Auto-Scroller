{
    "manifest_version": 3,
    "name": "YouTube Shorts Auto-Scroll",
    "version": "1.0",
    "description": "Automatically scrolls to the next YouTube Short when the current one ends.",
    "permissions": ["storage"],
    "host_permissions": ["https://www.youtube.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/shorts/*"],
        "js": ["content.js"]
      }
    ]
  }
  